generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  emial     String   @unique   // keep your spelling
  password  String?             // must be optional
  mobile    String?             // must be optional
  image     String?
  bio       String?
  degree    String?
  branch    String?
  year      Int?
  semester  Int?
  createdAt DateTime @default(now())
}
